@model RestaurantOrderingSystem.Models.OrderDb

@{
    ViewData["Title"] = "Delete Order";
}

<h2>Delete Order</h2>

<h4>Are you sure you want to delete this order?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.OrderId</dd>

        <dt class="col-sm-2">Order No</dt>
        <dd class="col-sm-10">@Model.OrderNo</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Customer</dd>

        <dt class="col-sm-2">Items</dt>
        <dd class="col-sm-10">@Model.Items</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Payment</dt>
        <dd class="col-sm-10">@Model.Payment</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="OrderId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
