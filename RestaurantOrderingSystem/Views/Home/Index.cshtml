@{
    ViewData["Title"] = "Home";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <!-- Card -->
            <div class="card shadow-lg rounded-4 border-0 overflow-hidden">

                <!-- Header -->
                <div class="card-header text-center text-white p-4" style="background-color: #6c5ce7;">
                    <h2 class="mb-0"> Restaurant Ordering Sytem 🍽 </h2>
                </div>

                <!-- Body -->
                <div class="card-body text-center p-5">
                    <h4 class="fw-bold text-dark mb-4">
                        Welcome to Our Restaurant Order Now
                    </h4>
                    <p class="text-muted mb-4">
                        Manage your restaurant orders, track expenses, and view customer payments all in one place.
                    </p>

                    <!-- Actions -->
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <a asp-action="ShowDetails" class="btn btn-accent px-4 rounded-pill text-white">📋 View Expenses</a>
                        <a asp-action="Create" class="btn btn-outline-secondary px-4 rounded-pill">➕ Add New Order</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    .btn-accent {
        background-color: #e17055;
    }

        .btn-accent:hover {
            background-color: #d35400;
        }
